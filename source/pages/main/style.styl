main {
  height: 100%
  //display flex
  //flex-direction column;
  .wrap {
    width: 100%;
    height: 100%;
    display flex;
    flex-direction column;
    align-content stretch
    .header {
      width: 100%
      height: 80px;
      background-color: #2b3245;
      color #fff;
      display: flex
      .content {
        width: 1200px
        line-height: 100%;
        margin: 0 auto;
        display flex;
        justify-content space-between;
        align-items center
        padding-left: 35px;
        .header-left {
          display: flex
          justify-content flex-start
          height: 100%
          align-items center
          .logoPic {
            width: 140px
            height: 80px
            background: url("../../static/images/dxtLogo.png") left center no-repeat;
            background-size 100%;
            margin-right: 20px;
          }
          .name {
            height: 30px
            line-height: 30px;
            padding-left: 20px;
            border-left: 1px solid #4e5978;
          }

        }
        .header-right {

          .userName {
            position relative
            display block
            height: 80px
            line-height: 80px
            padding-right: 60px;
            .exit{
              display none
              width: 254px
              padding-left: 85px
              height: 87px
              padding-top:10px;
              font-size: 24px;
              z-index 2000
              font-family: "PingFang SC";
              color: rgb(255, 255, 255);
              background url("../../static/images/exit.png") left top no-repeat
              position: absolute;
              right: 0
              top: 73px
            }
            &:hover .exit{
                display:block
              }

          }
          .userName::before {
            content '';
            display block;
            position absolute;
            right: 33px;
            top: 30px
            width: 12px
            height: 8px
            background: #2b3245;
            z-index 2

          }
          .userName::after {
            content '';
            display: block;
            position absolute;
            width: 10px
            height: 10px
            right 34px;
            top: 33px;
            overflow hidden
            border: 2px solid #25b6c7
            transform rotateZ(45deg);
            z-index 1
          }

        }
      }
    }
    .middle {
      display flex
      //justify-content: center
      //width: 100%;
      //height: 100%;
      flex 1;
      background: #57627d
      .contain {
        width: 1200px
        margin:0 auto
        justify-content center
        display: flex
        .nav {
          width: 240px
          //display: flex
          //flex-direction column
          background #383f52
          .consume {
            width: 100%
            padding-left: 70px;
            height: 70px
            line-height: 70px
            border-bottom: 1px solid #383f52
            color: #fff;
            background url("../../static/images/consume.png") 35px center no-repeat
            background-color  #4a536b
          }

          .order {
            position relative
            padding-left: 70px;
            height: 70px
            line-height: 70px
            background url("../../static/images/order.png") 38px center no-repeat
            background-color: #4a536b;
            color: #fff;
          }
            .active{
                 background-color #23d1e3
               }
        }
        ui-view {
          width: 100%
          height: 100%
          flex 1
          background-color: #ecf1f5
          overflow-y auto
          //display flex
        }
      }

    }
  }
